<div class="card mb-3 shadow-sm">
  <div class="card-body p-3">
    <div class="d-flex flex-column">
      <div class="mb-1">
        <% role_badge_class = conversation_history_entry["role"] == "assistant" ? "bg-primary" : "bg-secondary" %>
        <span class="badge <%= role_badge_class %> text-white"><%= conversation_history_entry["role"].capitalize %></span>
      </div>
      <div class="mt-1 p-2 rounded <%= conversation_history_entry["role"] == "assistant" ? "bg-light" : "" %>">
        <%= conversation_history_entry["content"] %>
      </div>
    </div>
  </div>
</div>
